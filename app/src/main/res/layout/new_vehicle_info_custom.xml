<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@color/white">



    <android.support.v7.widget.CardView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/cv_diig"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#e3f2fd">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="1.5"
            >
           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:layout_marginTop="0dp">-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".3"
                    android:gravity="center_vertical"

                    android:layout_marginTop="0dp">





                <ImageView
                    android:layout_weight=".0"
                    android:id="@+id/google"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/gmapnew"
                    android:layout_gravity="start"
                    />


                <TextView android:id="@+id/vName"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="  vechicle"
                    android:layout_gravity="center"
                    android:textColor="@color/UIBlue"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="5dp"
                 />

              <Button
                  android:textSize="12dp"
                  android:gravity="center"
                  android:id="@+id/trip"
                  android:layout_marginRight="10dp"
                  android:background="@drawable/trip"
                  android:layout_weight=".1"
                  android:text="Trip"
                  android:layout_width="30dp"
                  android:layout_height="30dp" />










            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight=".5"
                android:weightSum="1.5">

                <TextView android:id="@+id/vDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:layout_weight=".5"/>
                <TextView android:id="@+id/vTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:layout_weight=".5"/>

                <TextView android:id="@+id/vSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:layout_weight=".5"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".5"
                android:weightSum="1"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="2dp">

                <TextView android:id="@+id/vLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/UIBlue"
                    android:paddingLeft="5dip"
                    android:fontFamily="sans-serif-light"
                    android:background="#e3f2fd"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>