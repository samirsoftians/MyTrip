<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.currentpositionapp.FleetVIew_MainForm">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/img1_vehicle_intimation"
        android:layout_width="126dp"
        android:layout_height="158dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="22dp"
        android:textColor="#000000"
        android:text="Vehicle Intimation"
        android:drawableTop="@drawable/vehinticon"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#b7c3c2" />
    <TextView
        android:layout_width="172dp"
        android:id="@+id/img2_odometer_reading"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="23dp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/iconodometer"
        android:text="      Odometer Reading"
        android:textStyle="bold"
        android:textSize="15dp"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/img3_alerts"
                android:layout_width="126dp"
                android:layout_height="178dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/alerticon"
                android:text="     Alerts"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#b7c3c2" />
            <TextView
                android:id="@+id/img4_violation"
                android:layout_width="122dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/violationicon"
                android:text="\n      Violation"
                android:textStyle="bold"
                android:textSize="15dp"/>



        </LinearLayout>

    </LinearLayout>

</ScrollView>

